{
    "name": "cywolf/nlp-tools",
    "type": "typo3-cms-extension",
    "description": "Natural Language Processing tools for TYPO3 with language detection, stemming, stop words filtering, and text clustering",
    "license": "GPL-2.0-or-later",
    "require": {
        "typo3/cms-core": "^12.4 || ^13.0",
        "php": ">=8.1",
        "wamania/php-stemmer": "^3.0"
    },
    "require-dev": {
        "typo3/testing-framework": "^7.0 || ^8.0"
    },
    "autoload": {
        "psr-4": {
            "Cywolf\\NlpTools\\": "Classes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cywolf\\NlpTools\\Tests\\": "Tests/"
        }
    },
    "extra": {
        "typo3/cms": {
            "extension-key": "nlp_tools"
        }
    }
}
{
    "name": "cywolf/nlp-tools",
    "type": "typo3-cms-extension",
    "version": "dev-main",
    "description": "Natural Language Processing tools for TYPO3 with language detection, stemming and stop words filtering",
    "license": "GPL-2.0-or-later",
    "require": {
        "typo3/cms-core": "^13.0",
        "php": ">=8.2",
        "wamania/php-stemmer": "^3.0"
    },
    "require-dev": {
        "typo3/testing-framework": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "Cywolf\\NlpTools\\": "Classes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cywolf\\NlpTools\\Tests\\": "Tests/"
        }
    },
    "extra": {
        "typo3/cms": {
            "extension-key": "nlp_tools"
        }
    }
}